<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/layone">
      <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/images"
        android:id="@+id/firstimage"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/delete"
        android:src="@drawable/ic_delete_white_18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"/>
    <ImageView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:src="@drawable/images"
        android:id="@+id/secondimage"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/firstimage"
        android:layout_alignParentRight="true"
        android:scaleType="centerCrop"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/marker"
        android:layout_marginTop="160dp"
        android:src="@drawable/marker"
        android:layout_alignParentRight="true"
        android:layout_marginRight="145dp"/>
  </RelativeLayout>
    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/laytwo"

        android:layout_below="@id/layone">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/propicone"
            android:src="@drawable/profile"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charles"
            android:id="@+id/firsttextoflaytwo"
            android:layout_toRightOf="@id/propicone"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"

            android:layout_marginLeft="10dp"/>
          <ImageView
              android:layout_width="30dp"
              android:layout_height="30dp"
              android:id="@+id/message"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@id/propicone"
              android:layout_below="@id/firsttextoflaytwo"
              android:src="@drawable/ic_local_post_office_black_24dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/numberone"
            android:layout_toRightOf="@id/message"
            android:layout_below="@id/firsttextoflaytwo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"/>
       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:id="@+id/likeoflaytwo"
           android:src="@drawable/thumb"
           android:layout_toRightOf="@id/message"
           android:layout_below="@id/firsttextoflaytwo"
           android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:layout_toRightOf="@id/likeoflaytwo"
            android:layout_below="@id/firsttextoflaytwo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
    <RelativeLayout

        android:layout_width="180dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:id="@+id/laythree"
        android:layout_toRightOf="@id/laytwo"
        android:layout_below="@id/layone"
      >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageoflaythree"
            android:src="@drawable/profile2"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sweet pad you"
            android:layout_toRightOf="@id/imageoflaythree"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/firsttextoflaythree"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeoflaythree"
            android:src="@drawable/thumb"
            android:layout_below="@id/firsttextoflaythree"
            android:layout_marginLeft="55dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:id="@+id/secondtextoflaythree"
            android:layout_below="@id/firsttextoflaythree"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/likeoflaythree"/>
    </RelativeLayout>

</RelativeLayout>